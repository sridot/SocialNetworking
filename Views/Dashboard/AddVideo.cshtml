
@{
    ViewBag.Title = "AddVideo";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="btn-group float-end">
        <a href="Video" class="btn btn-success">All</a>
        <a href="#" class="btn btn-success active">Add</a>
        <a href="DeleteVideo" class="btn btn-success">Delete</a>
    </div>
    <p class="display-6 text-muted m-2">Video</p>
    <p class="text-muted m-2">Add Video Url</p>
    @using (Html.BeginForm())
    {
        <div class="row g-2 m-2">
            <div class="col-md-8">
                <div class="form-floating">
                    <input type="url" class="form-control" id="floatingUrl" placeholder="Please Enter Website Url" />
                    <label for="floatingUrl">Video Url</label>
                </div>
                <span id="spurl" style="color:forestgreen; float:right;"></span>
            </div>
        </div>
        <div class="row g-2 m-2">
            <div class="col-md-8">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingTitle" placeholder="Please Enter Website Title" />
                    <label for="floatingTitle">Title</label>
                </div>
            </div>
        </div>
        <div class="row g-2 m-2">
            <div class="col-md-8">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Please Enter Address Here" id="floatingDescription" style="height: 75px"></textarea>
                    <label for="floatingDescription">Description</label>
                </div>
                <span id="spdescription" class="text-muted mt-1" style="float:right; font-size:10px;"></span>
            </div>
        </div>
        <div class="row g-2 m-2">
            <div class="col-md-8">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Please Enter Address Here" id="floatingKeywords" style="height: 75px"></textarea>
                    <label for="floatingKeywords">Keywords</label>
                </div>
                <span id="spkeywords" class="text-muted mt-1" style="float:right; font-size:10px;"></span>
            </div>
        </div>
        <div class="row g-2 m-2">
            <div class="col-md-8">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingCategory" placeholder="Please Enter Website Category" />
                    <label for="floatingCategory">Category</label>
                </div>
            </div>
        </div>
        <div class="row g-2 m-2">
            <div class="col-md-8">
                <input type="submit" value="Submit" class="btn btn-outline-success" />
            </div>
        </div>
    }
</div>

